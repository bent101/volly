{
	"name": "volly",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"build": "vite build",
		"dev": "vite",
		"start": "vite preview",
		"format": "prettier --write .",
		"db:generate": "sst shell -- drizzle-kit generate",
		"db:migrate": "sst shell -- drizzle-kit migrate",
		"db:push": "sst shell -- drizzle-kit push",
		"db:studio": "sst shell -- drizzle-kit studio",
		"zero:generate": "drizzle-zero generate --format --output src/db/schema.gen.ts",
		"zero:deploy-permissions": "sst shell -- zero-deploy-permissions -p src/db/schema.ts",
		"pkill": "lsof -i :4852 | grep '(LISTEN)' | awk '{print $2}' | xargs kill -9",
		"start-db": "docker compose up -d",
		"start-db-hard": "docker compose up -d --build",
		"stop-db": "docker compose down",
		"destroy-db": "bun run stop-db && rimraf .sst/storage/postgres"
	},
	"dependencies": {
		"@aws-sdk/client-sesv2": "^3.799.0",
		"@openauthjs/openauth": "^0.4.3",
		"@rocicorp/zero": "0.19.2025050203",
		"@tailwindcss/vite": "^4.1.5",
		"@types/js-cookie": "^3.0.6",
		"@vitejs/plugin-react": "^4.4.1",
		"class-variance-authority": "^0.7.1",
		"drizzle-orm": "^0.43.1",
		"drizzle-zero": "^0.9.2",
		"hono": "^4.7.8",
		"jose": "^6.0.10",
		"js-cookie": "^3.0.5",
		"nanoid": "^5.1.5",
		"phosphor-react": "^1.4.1",
		"postgres": "^3.4.5",
		"react": "^19.1.0",
		"react-dom": "^19.0.0",
		"react-twc": "^1.4.2",
		"sst": "3.13.20",
		"valibot": "^1.0.0",
		"vite": "^6.3.4"
	},
	"devDependencies": {
		"@types/node": "^20",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"drizzle-kit": "^0.31.0",
		"prettier": "^3.5.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"tailwindcss": "^4",
		"typescript": "^5",
		"vite-plugin-svgr": "^4.3.0"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@rocicorp/zero-sqlite3"
		]
	},
	"packageManager": "pnpm@10.8.1"
}
